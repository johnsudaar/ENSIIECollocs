= form_for @colloc do |f|
  - if @colloc.errors.any?
    #error_explanation
      %h2= "#{pluralize(@colloc.errors.count, "error")} prohibited this colloc from being saved:"
      %ul
        - @colloc.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :titre
    = f.text_field :titre
  .field
    = f.label :adresse
    = f.text_field :adresse
  .field
    = f.label :size
    = f.text_field :size
  .field
    = f.label :places
    = f.number_field :places
  .field
    = f.label :max_people
    = f.number_field :max_people
  .field
    = f.label :price
    = f.text_field :price
  .actions
    = f.submit 'Save'
