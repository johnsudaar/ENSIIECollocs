!!!
%html
  %head
    %title ENSIIE Colloc
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    :javascript
      login_post_url = "#{json_login_path}";
      home_url = "#{root_path}";
  %body
    %nav.top-bar{"data-topbar" => "", :role => "navigation"}
      %ul.title-area
        %li.name
          = link_to root_path, {class:"menu-title-link"} do
            %img#logo-ensiie{:href => "#", :src => asset_path("ensiie.png")}
            %h1.menu-title ENSIIE'Colloc
        %li.toggle-topbar.menu-icon
          %a{:href => "#"}
            %span Menu
      %section.top-bar-section
        %ul.right
          - if user_signed_in?
            %li
              %a{:href => "#"} Map
            %li
              %a{:href => "#"} Collocs
            %li
              %a{:href => "#"} Info
            %li
              = link_to "Deconnexion", destroy_user_session_path, method: :delete
          - else
            %li{:class => ("active" unless ! current_page?(new_user_registration_path))}
              = link_to "S'inscrire", new_user_registration_path
            %li.show-for-large-up
              %a{"aria-controls" => "login_drop_down", "aria-expanded" => "false", "data-dropdown" => "login_drop_down"} Connexion
              #login_drop_down.f-dropdown.content.small{"aria-hidden" => "true", "data-dropdown-content" => "", :tabindex => "-1"}
                = render :template => "devise/sessions/new"
            %li.hide-for-large-up{:class => ("active" unless ! current_page?(new_user_session_path))}
              = link_to "Connexion", new_user_session_path
    .container
      / ---------------------------------------------------------------------------------------------------------------------------------
      = yield
      / ---------------------------------------------------------------------------------------------------------------------------------
    %section.tldr
      %footer.footer
        .container
          %p.text-muted © Site créé par Ara et Johnsudaar
    - if flash[:notice]
      :javascript
        toastr.success("#{flash[:notice]}")
    - if flash[:error]
      :javascript
        toastr.error("#{flash[:error]}")
