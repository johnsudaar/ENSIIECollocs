!!!
%html
  %head
    %title ENSIIE Colloc
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %nav.top-bar{"data-topbar" => "", :role => "navigation"}
      %ul.title-area
        %li.name
          = link_to root_path, {class:"menu-title-link"} do
            %img#logo-ensiie{:href => "#", :src => asset_path("ensiie.png")}
            %h1.menu-title ENSIIE'Colloc
        %li.toggle-topbar.menu-icon
          %a{:href => "#"}
            %span Menu
      %section.top-bar-section
        %ul.right
          - if user_signed_in?
            %li
              %a{:href => "#"} Map
            %li
              %a{:href => "#"} Collocs
            %li
              %a{:href => "#"} Info
          - else
            %li
              %a{"aria-controls" => "login_drop_down", "aria-expanded" => "false", "data-dropdown" => "login_drop_down"} Login
              #login_drop_down.f-dropdown.content{"aria-hidden" => "true", "data-dropdown-content" => "", :tabindex => "-1"}
                = render :template => "devise/sessions/new"
    %br
    %br
    = yield
    %section.tldr
      %footer.footer
        .container
          %p.text-muted © Site créé par Ara et Johnsudaar
