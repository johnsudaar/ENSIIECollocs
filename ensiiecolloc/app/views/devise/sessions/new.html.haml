%h2 Connexion
= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :id => "connexion_user" }) do |f|
  .field
    %br/
    = f.email_field :email, autofocus: true
  .field
    %br/
    = f.password_field :password, autocomplete: "off"
  - if devise_mapping.rememberable?
    .field
      = f.check_box :remember_me
  .actions
    = f.submit "Connexion"
