 body{
   background: url("<%= asset_path 'stras.jpg' %>") fixed;
   background-size : cover;
 }

 footer{
   margin-top: 10px;
   margin-bottom : 10px;
   width:100%;
 }

.title-area{
  overflow: hidden;
}

#logo-ensiie{
  width:45px;
  height:45px;
  vertical-align: top;
}

.menu-title{
  display: inline-block;
  color:white;
  font-size: 1.5rem !important;
  margin-right:7px !important;
}

.menu-title-link{
  padding-bottom:5px;
}

.container{
  width:80%;
  margin:auto;
  margin-top:1em;
  background-color: rgba(255,255,255,0.95);
  padding:40px;
  padding-top:3px ;
  padding-bottom : 7px;
  margin-bottom : 20px;
}

.actions{
  margin-top : 1em;
}

.top-bar-section > ul.right{
  padding-right:2rem;
}

#connexion_user > .field > small.error{
  display:none;
}

.center-text{
  text-align:center;
}

.no-margin{
  margin:0;
}

.toast {
  opacity: .9 !important;
}
.toast:hover{
  opacity: 1 !important;
}

.visible{
  display: block !important;
}

.f-dropdown::before{
  left:270px;
}
.f-dropdown::after{
  left:269px;
}
